<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="ckus_stub_copy_1_custom">
        <div t-attf-class="ckus_stub ckus_stub_{{ stub_num }}">
        <div class="row summary_line">
            <div class="col-xs-4 text-start">
                <span t-esc="page['partner_name']"/>
            </div>
            <div class="col-xs-4 text-middle">
                <span t-esc="page['date']"/>
            </div>
            <div class="col-xs-4 text-end sequence_number">
                <span t-if="page['sequence_number']" t-esc="page['sequence_number']"/>
            </div>
        </div>

        <table class="table table-bordered table-sm stub_lines">
            <thead><tr>
                <th class="text-start">Due Date</th>
                <th class="text-start">Description</th>
                <th class="text-end">Invoice Amount</th>
                <th class="text-end">Balance Due</th>
                <th class="text-end">Payment</th>
            </tr></thead>
            <tbody>
                <t t-foreach="page['stub_lines']" t-as="stub_line">
                    <t t-if="stub_line.get('header')">
                        <tr><th colspan="6"><t t-esc="stub_line['name']"/></th></tr>
                    </t>
                    <t t-if="not stub_line.get('header')"><tr>
                        <td class="text-start"><t t-if="stub_line['due_date']" t-esc="stub_line['due_date']"/></td>
                        <td class="text-start"><t t-esc="stub_line['number']"/></td>
                        <td class="text-end"><t t-esc="stub_line['amount_total']"/></td>
                        <td class="text-end">
                            <t t-esc="stub_line['amount_residual']"/>
                        </td>
                        <td class="text-end"><t t-esc="stub_line['amount_paid']"/></td>
                    </tr></t>
                </t>
                <tr t-if="page['stub_cropped']"><td colspan="6" class="text-end">...</td></tr>
            </tbody>
        </table>
        <div class="stub_total_amount">Check Amount:
            <t t-esc="page['amount']"/>
        </div>
    </div>
    </template>

    <template id="ckus_check_copy_1_custom">
          <div class="ckus_check">
        <t t-if="page['state'] == 'cancelled'">
            <div class="o-watermark">VOID</div>
        </t>

        <div class="sequence_number" t-if="page['sequence_number']" t-esc="page['sequence_number']"/>
        <div class="ckus_date" t-esc="page['date']" style="margin-top:8px"/>
        <div class="row">
            <div class="ckus_amount_in_word" t-esc="page['amount_in_word']" style="margin-top:40px"/>
        </div>

        <!--<div class="ckus_payee_name" t-esc="page['partner_name']"/>-->
        <div class="ckus_amount" style="margin-top:46px">
            <t t-esc="page['amount'].replace(o.currency_id.symbol, '')"/>
        </div>
        <!--<div class="ckus_amount_in_word" t-esc="page['amount_in_word']"/>-->
        <br/>
        <br/>
        <div class="ckus_payee_addr" t-esc="page['partner_id']" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}" style="margin-top:2px"/>
        <div class="ckus_memo" t-esc="page['memo']"/>
    </div>
    </template>


